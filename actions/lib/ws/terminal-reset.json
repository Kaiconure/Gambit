{
  "vars": {
    "ws": {
      "terminal_reset": {
        "disabled": null,
        "on_skillchains": null,
        "wait": 0
      }
    }
  },
  "actions": [
    {
      "when": [
        "not vars.ws.terminal_reset.disabled",
        "party_weapon_skill and skillchain",
        "(arrayCount(vars.ws.terminal_reset.on_skillchains) > 0 and any(skillchain.name, vars.ws.terminal_reset.on_skillchains)) or \\",
        "    (any(skillchain.name, 'Light', 'Darkness') and any(skillchain.name, party_weapon_skill.skillchains))",
        "skillchain_age >= vars.ws.terminal_reset.wait"
      ],
      "commands": [
        "log(' === Resetting Skillchain Tracking === ')",
        "resetSkillchain()"
      ]
    }
  ]
}
