{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "keep_blind": {
      "spells": ["Blind II", "Blind"]
    }
  },
  "actions": [
    {
      "when": [
        "bt and bt.distance <= constants.spell_distance",
        "hasSpell(vars.keep_blind.spells) and canUse(spell)",
        "not hasEffectOf(bt, spell)"
      ],
      "commands": ["useSpell()", "postpone(spellRecast(spell.name) + 5)"],
      "frequency": 1
    }
  ]
}
