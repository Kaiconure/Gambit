{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "keep_silence": {
      "spells": ["Silence"]
    }
  },
  "actions": [
    {
      "when": [
        "bt and bt.distance <= constants.spell_distance",
        "canUse(vars.keep_silence.spells) and not hasEffectOf(bt, vars.keep_silence.spells)"
      ],
      "commands": [
        "use(bt)",
        "postpone(spellRecast(spell.name) + 5)"
      ],
      "frequency": 5
    }
  ]
}
