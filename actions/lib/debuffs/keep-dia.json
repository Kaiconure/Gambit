{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "keep_dia": {
      "spells": ["Dia III", "Dia II", "Dia"]
    }
  },
  "actions": [
    {
      "when": [
        "bt and bt.distance <= constants.spell_distance",
        "hasSpell(vars.keep_dia.spells) and canUse(spell)",
        "not hasEffectOf(bt, spell)"
      ],
      "commands": ["useSpell()", "postpone(spellRecast(spell.name) + 5)"],
      "frequency": 1
    }
  ]
}
