{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "keep_addle": {
      "spells": ["Addle II", "Addle"]
    }
  },
  "actions": [
    {
      "when": [
        "bt and bt.distance <= constants.spell_distance",
        "canUse(vars.keep_addle.spells) and not hasEffectOf(bt, vars.keep_addle.spells)"
      ],
      "commands": [
        "use(bt)",
        "postpone(spellRecast(spell.name) + 5)"
      ],
      "frequency": 5
    }
  ]
}
