{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "keep_distract": {
      "spells": ["Distract III", "Distract II", "Distract"]
    }
  },
  "actions": [
    {
      "when": [
        "bt and bt.distance <= constants.spell_distance",
        "hasSpell(vars.keep_distract.spells) and canUse(spell)",
        "not hasEffectOf(bt, spell)"
      ],
      "commands": [
        "useSpell()",
        "postpone((spellRecast(spell.name) or 0) + 5)"
      ],
      "frequency": 1
    }
  ]
}
