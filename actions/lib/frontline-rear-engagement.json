{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "frontline_rear_engagement": {
      "distance": 5,
      "duration": 5
    }
  },
  "actions": [
    {
      "import": "frontline-engagement"
    },
    {
      "when": [
        "bt.distance <= 4",
        "canAlignRear() and not alignedRear()"
      ],
      "commands": [
        "alignRear(vars.frontline_rear_engagement.distance, vars.frontline_rear_engagement.duration)",
        "alignedRear() or postpone(10)"
      ],
      "frequency": 1,
      "scope": "battle",
      "delay": 2
    }
  ]
}
