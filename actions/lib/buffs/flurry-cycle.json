{
  "about": {
    "author": "@Kaiconure"
  },
  "vars": {
    "flurry_cycle": {
      "spells": ["Flurry II", "Flurry"],
      "targets": []
    }
  },
  "actions": [
    {
      "when": "partyByName(vars.flurry_cycle.targets) and not hasBuff(member, 'Flurry') and canUse(vars.flurry_cycle.spells)",
      "commands": [
        "use(member)",
        "postpone(spellRecast(spell.name) + 5)"
      ],
      "frequency": 1
    }
  ]
}
