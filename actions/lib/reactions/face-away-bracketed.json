{
  "about": {
    "author": "@Kaiconure",
    "notes": [
      "Place this at the very top of your battle section, or at least above any gambit that will turn or move toward the mob.",
      "This will cause you to turn and face away from the mob when certain abilities are used, and then turn back when other",
      "abilities are later used."
    ]
  },
  "vars": {
    "face_away_bracketed": {
      "initiators": null,
      "terminators": null
    }
  },
  "actions": [
    {
      "commands": [
        "setVar('vars.face_away_bracketed.triggered', false)",
        "setVar('vars.face_away_bracketed._initiators', vars.face_away_bracketed[bt.name] and vars.face_away_bracketed[bt.name].initiators or vars.face_away_bracketed.initiators)",
        "setVar('vars.face_away_bracketed._terminators', vars.face_away_bracketed[bt.name] and vars.face_away_bracketed[bt.name].terminators or vars.face_away_bracketed.terminators)",
        "setVar('vars.face_away_bracketed._wait', vars.face_away_bracketed[bt.name] and vars.face_away_bracketed[bt.name].wait or vars.face_away_bracketed.wait or 3)"
      ],
      "delay": 0,
      "frequency": "infinity",
      "scope": "battle",
      "comment": "This will run exactly once at the start of any battle, and ensure that the face_away_bracketed.triggered flag is cleared and that the right set is loaded."
    },
    {
      "when": [
        "vars.face_away_bracketed.triggered",
        "arrayLength(vars.face_away_bracketed._terminators) > 0 and enemyUsedAbility(vars.face_away_bracketed._terminators)"
      ],
      "commands": [
        "setVar('vars.face_away_bracketed.triggered', false)",
        "wait(vars.face_away_bracketed._wait)",
        "resumeBlackMagic()",
        "log('====== END BRACKETED FACE-AWAY SEQUENCE ====== ')"
      ]
    },
    {
      "when": [
        "bt",
        "not vars.face_away_bracketed.triggered",
        "arrayLength(vars.face_away_bracketed._initiators) > 0 and enemyUsedAbility(vars.face_away_bracketed._initiators)"
      ],
      "commands": [
        "faceAway(bt)",
        "setVar('vars.face_away_bracketed.triggered', true)",
        "suppressBlackMagic()",
        "log('====== BEGIN BRACKETED FACE-AWAY SEQUENCE ====== ')",
        "wait(2)"
      ],
      "delay": 0
    },
    {
      "when": "vars.face_away_bracketed.triggered",
      "commands": [
        "log('Continuing bracketed face-away...')",
        "faceAway(bt)",
        "wait(2)"
      ],
      "delay": 0
    }
  ]
}
