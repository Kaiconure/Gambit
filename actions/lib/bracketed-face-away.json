{
  "about": {
    "author": "@Kaiconure",
    "notes": [
      "Place this at the very top of your battle section, or at least above any gambit that will turn or move toward the mob.",
      "This will cause you to turn and face away from the mob when certain abilities are used, and then turn back when other",
      "abilities are later used."
    ]
  },
  "vars": {
    "bracketed_face_away": {
      "initiators": ["Primordial Surge"],
      "terminators": ["Waning Vigor", "Expunge"],
      "triggered": false
    }
  },
  "actions": [
    {
      "commands": ["setVar('vars.bracketed_face_away.triggered', false)"],
      "delay": 0,
      "frequency": "infinity",
      "scope": "battle",
      "comment": "This will run exactly once at the start of any battle, and ensure that the bracketed_face_away flag is cleared."
    },
    {
      "when": [
        "vars.bracketed_face_away.triggered",
        "enemyUsedAbility(vars.bracketed_face_away.terminators)"
      ],
      "commands": [
        "setVar('vars.bracketed_face_away.triggered', false)",
        "log('====== END BRACKETED FACE-AWAY SEQUENCE ====== ')"
      ]
    },
    {
      "when": [
        "not vars.bracketed_face_away.triggered",
        "enemyUsedAbility(vars.bracketed_face_away.initiators)"
      ],
      "commands": [
        "faceAway(bt)",
        "setVar('vars.bracketed_face_away.triggered', true)",
        "log('====== BEGIN BRACKETED FACE-AWAY SEQUENCE ====== ')"
      ],
      "delay": 0
    },
    {
      "when": "vars.bracketed_face_away.triggered",
      "commands": ["log('keeping away...')", "faceAway(bt)", "wait(1)"],
      "delay": 0
    }
  ]
}
